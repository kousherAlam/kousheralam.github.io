---
import { Image } from "astro:assets";

interface Props {
  title: string;
  badge: string;
  authority: {
    name: string;
    link: string;
  };
  verificationLink: string;
  issued: string;
}
const { title, badge, authority, verificationLink, issued } = Astro.props;
---

<div class="bg-slate-800 w-full">
  <div class="grid grid-cols-12">
    <div
      class="flex justify-center items-center col-span-3 bg-slate-700 py-2 px-1"
    >
      <Image
        width={100}
        height={100}
        src={badge}
        alt="Google Verification badge"
      />
    </div>
    <div class="col-span-9 px-3 py-4 flex flex-col justify-between">
      <div>
        <h4 class="text-lg">{title}</h4>
        <ul class="list-none">
          <li>
            <p class="mb-0 mt-1 text-xs text-gray-100">
              <span>
                <a href={authority.link} target="_blank">
                  {" "}
                  {authority.name}{" "}
                </a>
              </span>
            </p>
          </li>
          <li>
            <p class="mb-0 mt-1 text-xs text-gray-100">
              <span>Issued On</span>
              <span>&nbsp;-&nbsp;</span>
              <span>{issued}</span>
            </p>
          </li>
        </ul>
      </div>
      <div>
        <a
          class="text-orange-500 hover:text-orange-400 visited:text-orange-600"
          href={verificationLink}
          target="_blank"
        >
          Verify Certificate
        </a>
      </div>
    </div>
  </div>
</div>
